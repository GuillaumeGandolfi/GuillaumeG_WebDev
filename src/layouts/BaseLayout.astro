---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import '../assets/css/global.css';

const { 
  title = "Mon Site Perso", 
  description = "Bienvenue sur mon site personnel.", 
  lang = "fr" 
} = Astro.props;
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preload" href="../assets/fonts/Inter18pt-Regular.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="../assets/fonts/Rajdhani-Regular.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin="anonymous" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="anonymous" />
  </head>
  <body id="top">
    <Header />
    <main id="main-content">
      <slot />
    </main>
    <Footer />
  </body>
</html>
